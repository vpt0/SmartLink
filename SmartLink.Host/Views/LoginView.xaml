<Window x:Class="SmartLink.Host.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartLink Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,10">
            <TextBlock Text="SmartLink Login" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"/>
        </Border>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" Margin="50" VerticalAlignment="Center">
            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>
            
            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>
            
            <Button x:Name="LoginButton" Content="Login" 
                    Background="#2196F3" Foreground="White"
                    Padding="10,5" Click="Login_Click"/>
            
            <Button Content="Create Account" Margin="0,10,0,0"
                    Background="Transparent" Foreground="#2196F3"
                    BorderThickness="0" Click="CreateAccount_Click"/>
        </StackPanel>
    </Grid>
</Window>