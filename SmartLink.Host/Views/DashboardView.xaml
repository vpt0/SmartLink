<Window x:Class="SmartLink.Host.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="SmartLink Dashboard" Height="700" Width="1000" Background="#F7F9FB">
    
    <Window.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" Direction="270" Color="#DDDDDD" Opacity="0.5" BlurRadius="10"/>
        
        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1A2B50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D1B3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Help Button Style -->
        <Style x:Key="HelpButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Slider Styles -->
        <Style x:Key="OrangeSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF5722"/>
        </Style>
        
        <Style x:Key="BlueSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
        
        <Style x:Key="GreenSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
        </Style>
        
        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundBorder" Width="50" Height="24" CornerRadius="12" Background="#CCCCCC">
                                <Border x:Name="Indicator" Width="16" Height="16" CornerRadius="8" Background="White" 
                                        HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="#2196F3"/>
                                <Setter TargetName="Indicator" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Indicator" Property="Margin" Value="0,0,4,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
        </Style>
        
        <!-- Nav Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="70"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="18" HorizontalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Content}" FontSize="12" 
                                           Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="White" BorderBrush="#F0F0F0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- User Avatar and Profile -->
                <Border Grid.Row="0" Padding="24,24,24,12" Cursor="Hand">
                    <Grid>
                        <Ellipse Width="60" Height="60" Fill="#E0E4E8"/>
                        <TextBlock Text="Kaju" FontSize="16" Foreground="#333" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Button Width="60" Height="60" Background="Transparent" BorderThickness="0" Click="OnProfileClick">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <ContentPresenter/>
                                        <TextBlock Text="Edit" FontSize="12" Foreground="#666" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    </Grid>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <!-- Popup for Profile Edit -->
                        <Popup x:Name="ProfilePopup" Placement="Right" PlacementTarget="{Binding ElementName=ProfileNameBox}" StaysOpen="False">
                            <Border Background="White" CornerRadius="8" Padding="16" Effect="{StaticResource DropShadowEffect}">
                                <StackPanel>
                                    <TextBlock Text="Edit Profile" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                                    <TextBox x:Name="PopupProfileNameBox" Text="John" Width="180" Margin="0,0,0,8">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Grid>
                                                                <TextBox Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                         x:Name="textSource" 
                                                                         Background="{TemplateBinding Background}" 
                                                                         BorderBrush="{TemplateBinding BorderBrush}" 
                                                                         BorderThickness="{TemplateBinding BorderThickness}" 
                                                                         Foreground="{TemplateBinding Foreground}"/>
                                                                <TextBlock Text="Name" 
                                                                           Foreground="Gray" 
                                                                           Visibility="Collapsed"
                                                                           IsHitTestVisible="False" 
                                                                           Margin="5,2,0,0">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Text, ElementName=textSource}" Value="">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <TextBox x:Name="PopupProfileEmailBox" Text="john@example.com" Width="180">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Grid>
                                                                <TextBox Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                         x:Name="textSource" 
                                                                         Background="{TemplateBinding Background}" 
                                                                         BorderBrush="{TemplateBinding BorderBrush}" 
                                                                         BorderThickness="{TemplateBinding BorderThickness}" 
                                                                         Foreground="{TemplateBinding Foreground}"/>
                                                                <TextBlock Text="Email" 
                                                                           Foreground="Gray" 
                                                                           Visibility="Collapsed"
                                                                           IsHitTestVisible="False" 
                                                                           Margin="5,2,0,0">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Text, ElementName=textSource}" Value="">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <Button Content="Save" Style="{StaticResource PrimaryButtonStyle}" Margin="0,8,0,0" Click="OnProfileSaveClick"/>
                                </StackPanel>
                            </Border>
                        </Popup>
                        <!-- Editable Profile Fields -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="70,0,0,0">
                            <TextBox x:Name="ProfileNameBox" Text="John" Width="120" Margin="0,0,0,4"/>
                            <TextBox x:Name="ProfileEmailBox" Text="john" Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="0,24,0,0">
                    <RadioButton Content="Home" Tag="🏠" Style="{StaticResource NavButtonStyle}" GroupName="Nav" IsChecked="True" Click="OnHomeClick"/>
                    <RadioButton Content="Profile" Tag="👤" Style="{StaticResource NavButtonStyle}" GroupName="Nav" Click="OnProfileNavClick"/>
                </StackPanel>
                
                <!-- Connection Status -->
                <TextBlock Grid.Row="2" Text="Connected" HorizontalAlignment="Center" Foreground="#666" Margin="0,0,0,24"/>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="SmartLink" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="32,0,0,0"/>
                <Button Grid.Column="1" Content="Help" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,32,0" Click="OnHelpClick" ToolTip="View help information"/>
                
                <!-- Help Panel Popup -->
                <Popup x:Name="HelpPanelPopup" Placement="Center" StaysOpen="False">
                    <Border Background="White" CornerRadius="8" Padding="24" Width="500" Height="400" Effect="{StaticResource DropShadowEffect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="SmartLink Help" FontWeight="Bold" FontSize="20" Margin="0,0,0,16"/>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="Resource Sharing" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                                    <TextBlock Text="SmartLink allows you to share your computer's resources with others. You can control how much CPU, RAM, and storage you want to share." TextWrapping="Wrap" Margin="0,0,0,16"/>
                                    
                                    <TextBlock Text="CPU Cores" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="Select the number of CPU cores you want to share. Toggle the switch to lock/unlock this setting." TextWrapping="Wrap" Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="RAM Allocation" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="Choose how much RAM (in GB) to allocate to the shared session. Toggle the switch to lock/unlock this setting." TextWrapping="Wrap" Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Storage Allocation" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="Set the amount of storage space (in GB) to share. Toggle the switch to lock/unlock this setting." TextWrapping="Wrap" Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Operating System" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="Select which operating system environment you want to share." TextWrapping="Wrap" Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Link Generation" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="Click 'Generate Link' to create a shareable link with your selected settings. This link can be shared with others to connect to your shared resources." TextWrapping="Wrap" Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Session Management" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                    <TextBlock Text="You can terminate an active sharing session at any time by clicking the 'Terminate Session' button." TextWrapping="Wrap" Margin="0,0,0,12"/>
                                </StackPanel>
                            </ScrollViewer>
                            
                            <Button Grid.Row="2" Content="Close" Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Right" Margin="0,16,0,0" Click="OnCloseHelpPanel"/>
                        </Grid>
                    </Border>
                </Popup>
            </Grid>
            
            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="32,0,32,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <!-- System Info Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel Margin="24">
                                <TextBlock Text="System Info" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                                
                                <!-- Resource Usage Bars -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- RAM Bar -->
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <Border Height="120" Width="40" Background="#E3F2FD" CornerRadius="4" HorizontalAlignment="Center">
                                            <Border Height="60" Width="40" Background="#2196F3" VerticalAlignment="Bottom" CornerRadius="4"/>
                                        </Border>
                                        <TextBlock Text="RAM" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                                        <TextBlock Text="4 GB / 8 GB" HorizontalAlignment="Center" FontSize="12"/>
                                    </StackPanel>
                                    
                                    <!-- CPU Bar -->
                                    <StackPanel Grid.Column="1" Margin="4,0,4,0">
                                        <Border Height="120" Width="40" Background="#FFF3E0" CornerRadius="4" HorizontalAlignment="Center">
                                            <Border Height="40" Width="40" Background="#FF9800" VerticalAlignment="Bottom" CornerRadius="4"/>
                                        </Border>
                                        <TextBlock Text="CPU" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                                        <TextBlock Text="2 / 6 Cores" HorizontalAlignment="Center" FontSize="12"/>
                                    </StackPanel>
                                    
                                    <!-- Storage Bar -->
                                    <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                        <Border Height="120" Width="40" Background="#E8F5E9" CornerRadius="4" HorizontalAlignment="Center">
                                            <Border Height="80" Width="40" Background="#4CAF50" VerticalAlignment="Bottom" CornerRadius="4"/>
                                        </Border>
                                        <TextBlock Text="Storage" HorizontalAlignment="Center" Margin="0,8,0,4"/>
                                        <TextBlock Text="100 GB / 256 GB" HorizontalAlignment="Center" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Free Space Indicator -->
                                <Border Margin="0,16,0,0" Background="#F5F5F5" CornerRadius="4" Padding="12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="100 GB free" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                        
                        <!-- Operating System Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel Margin="24">
                                <TextBlock Text="Operating System" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <RadioButton Content="Windows" GroupName="OS" Margin="0,0,16,0"/>
                                    <RadioButton Content="macOS" GroupName="OS" Margin="0,0,16,0"/>
                                    <RadioButton Content="Linux" GroupName="OS" IsChecked="True"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Terminate Session Button -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel Margin="24">
                                <Button x:Name="TerminateSessionButton" Background="#C9000F" Foreground="White" FontWeight="Bold" Padding="16,12" Content="Terminate Session" Width="200" BorderThickness="0" Click="OnTerminateSessionClick" ToolTip="End the current sharing session">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>
                        
                        <!-- Connection Request Popup -->
                        <Popup x:Name="ConnectionRequestPopup" Placement="Center" StaysOpen="False">
                            <Border Background="White" CornerRadius="8" Padding="24" Width="350" Effect="{StaticResource DropShadowEffect}">
                                <StackPanel>
                                    <TextBlock Text="Connection Request" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>
                                    <TextBlock Text="User*** is trying to connect" FontSize="14" Margin="0,0,0,24"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button x:Name="RejectConnectionButton" Grid.Column="0" Content="Reject" Margin="0,0,8,0" Background="#C9000F" Foreground="White" Padding="12,8" Click="OnRejectConnectionClick">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        
                                        <Button x:Name="AcceptConnectionButton" Grid.Column="1" Content="Accept" Margin="8,0,0,0" Background="#4CAF50" Foreground="White" Padding="12,8" Click="OnAcceptConnectionClick">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </StackPanel>
                    
                    <!-- Right Column -->
                    <StackPanel Grid.Column="1" Margin="16,0,0,0">
                        <!-- Sharing Controls Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel Margin="24">
                                <TextBlock Text="Sharing Controls" FontSize="18" FontWeight="Bold" Margin="0,0,0,24"/>
                                
                                <!-- CPU Cores -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="CPU Cores" FontWeight="SemiBold" FontSize="14"/>
                                    <Button Grid.Column="1" Content="?" Style="{StaticResource HelpButtonStyle}" Margin="4,0" ToolTip="Select the number of CPU cores to share with the connected user"/>
                                    <TextBlock Grid.Column="2" Text="{Binding ElementName=CPUSlider, Path=Value}" FontWeight="SemiBold" FontSize="14" Margin="0,0,12,0"/>
                                    <ToggleButton Grid.Column="3" Style="{StaticResource ToggleSwitchStyle}" Checked="OnCPULockChecked" Unchecked="OnCPULockUnchecked" ToolTip="Toggle to lock/unlock CPU core allocation"/>
                                </Grid>
                                
                                <Slider x:Name="CPUSlider" Minimum="1" Maximum="6" Value="2" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="OnCPUCoresValueChanged" Style="{StaticResource OrangeSliderStyle}"/>
                                <!-- RAM Allocation -->
                                <Grid Margin="16,16,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="RAM (GB)" FontWeight="SemiBold" FontSize="14"/>
                                    <Button Grid.Column="1" Content="?" Style="{StaticResource HelpButtonStyle}" Margin="4,0" ToolTip="Select the amount of RAM to share with the connected user"/>
                                    <TextBlock Grid.Column="2" Text="{Binding ElementName=RAMSlider, Path=Value}" FontWeight="SemiBold" FontSize="14" Margin="0,0,12,0"/>
                                    <ToggleButton Grid.Column="3" Style="{StaticResource ToggleSwitchStyle}" Checked="OnRAMLockChecked" Unchecked="OnRAMLockUnchecked" ToolTip="Toggle to lock/unlock RAM allocation"/>
                                </Grid>
                                <Slider x:Name="RAMSlider" Minimum="2" Maximum="32" Value="8" TickFrequency="2" IsSnapToTickEnabled="True" ValueChanged="OnRAMValueChanged" Style="{StaticResource BlueSliderStyle}"/>
                                
                                <!-- Storage Allocation -->
                                <Grid Margin="16,16,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Storage (GB)" FontWeight="SemiBold" FontSize="14"/>
                                    <Button Grid.Column="1" Content="?" Style="{StaticResource HelpButtonStyle}" Margin="4,0" ToolTip="Select the amount of storage to share with the connected user"/>
                                    <TextBlock Grid.Column="2" Text="{Binding ElementName=StorageSlider, Path=Value}" FontWeight="SemiBold" FontSize="14" Margin="0,0,12,0"/>
                                    <ToggleButton Grid.Column="3" Style="{StaticResource ToggleSwitchStyle}" Checked="OnStorageLockChecked" Unchecked="OnStorageLockUnchecked" ToolTip="Toggle to lock/unlock storage allocation"/>
                                </Grid>
                                <Slider x:Name="StorageSlider" Minimum="5" Maximum="1000" Value="250" TickFrequency="50" IsSnapToTickEnabled="True" ValueChanged="OnStorageValueChanged" Style="{StaticResource GreenSliderStyle}"/>
                                
                                <!-- Link Generation Box -->
                                <Border Margin="0,24,0,0" Background="#F5F5F5" CornerRadius="8" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Generate Link" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                                        <TextBlock Text="Create a shareable link with your selected resources" FontSize="12" Foreground="#666666" Margin="0,0,0,16"/>
                                        
                                        <Button x:Name="GenerateLinkButton" Content="Generate Link" Style="{StaticResource PrimaryButtonStyle}" Click="OnGenerateLinkClick" Margin="0,0,0,16" ToolTip="Create a shareable link with your selected resource settings"/>
                                        
                                        <!-- Confirmation Modal for Session Start -->
                                        <Popup x:Name="SessionConfirmationPopup" Placement="Center" StaysOpen="False">
                                            <Border Background="White" CornerRadius="8" Padding="24" Width="400" Effect="{StaticResource DropShadowEffect}">
                                                <StackPanel>
                                                    <TextBlock Text="Confirm Session Settings" FontWeight="Bold" FontSize="18" Margin="0,0,0,16"/>
                                                    <TextBlock Text="You are about to start a sharing session with the following settings:" FontSize="14" Margin="0,0,0,16" TextWrapping="Wrap"/>
                                                    
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <TextBlock Text="CPU Cores:" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0" Margin="0,0,0,8"/>
                                                        <TextBlock Text="{Binding ElementName=CPUSlider, Path=Value}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>
                                                        
                                                        <TextBlock Text="RAM (GB):" FontWeight="SemiBold" Grid.Row="1" Grid.Column="0" Margin="0,0,0,8"/>
                                                        <TextBlock Text="{Binding ElementName=RAMSlider, Path=Value}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>
                                                        
                                                        <TextBlock Text="Storage (GB):" FontWeight="SemiBold" Grid.Row="2" Grid.Column="0" Margin="0,0,0,8"/>
                                                        <TextBlock Text="{Binding ElementName=StorageSlider, Path=Value}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>
                                                        
                                                        <TextBlock Text="Operating System:" FontWeight="SemiBold" Grid.Row="3" Grid.Column="0" Margin="0,0,0,8"/>
                                                        <TextBlock x:Name="SelectedOSTextBlock" Text="Windows" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>
                                                    </Grid>
                                                    
                                                    <TextBlock Text="Are you sure you want to proceed?" FontSize="14" Margin="0,8,0,16" TextWrapping="Wrap"/>
                                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Button Content="Cancel" Grid.Column="0" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" Click="OnCancelSessionConfirmation"/>
                                                        <Button Content="Confirm" Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" Margin="8,0,0,0" Click="OnConfirmSessionStart"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </Popup>
                                        
                                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="12" Visibility="Collapsed" x:Name="LinkDisplayBorder">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="GeneratedLinkTextBox" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                                                <Button Grid.Column="1" Content="Copy" Style="{StaticResource SecondaryButtonStyle}" Click="OnCopyLinkClick" Margin="8,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
        <!-- End of main content grid -->
    
    </Grid>
</Window>